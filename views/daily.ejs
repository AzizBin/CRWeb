<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8">
    <title> Rental </title>
    <link rel="stylesheet" href="/public/css/Style.css"  />
    <link rel="stylesheet" href="/public/css/daily.css" />   

    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="sidebar">
      <div class="logo-details">
        <i class='bx bxl-redux icon'></i>
        <div class="logo_name">Rental</div>
        <i class='bx bx-menu' id="btn"></i>
      </div>
      <ul class="nav-list">
        <li class="side-search">
          <i class='bx bx-search'></i>
          <input type="text" placeholder="البحث...">
          <span class="tooltip">البحث</span>
        </li>
        <li>
          <a href="#">
            <i class='bx bx-grid-alt'></i>
            <span class="links_name" id="liNameTest"> لوحة التحكم </span>
          </a>
          <span class="tooltip">لوحة التحكم</span>
          
        </li>
        <li>
          <a href="/daily">
            <i class='bx bx-user'></i>
            <span class="links_name">اليومية</span>
          </a>
          <span class="tooltip">اليومية</span>
          
        </li>
        <li>
          <a href="/index">
            <i class='bx bx-add-to-queue'></i>
            <span class="links_name">التسجيل</span>
          </a>
          <span class="tooltip">التسجيل</span>
          
        </li>
        <li>
          <a href="/Reports">
            <i class='bx bxs-report'></i>
            <span class="links_name">التقارير</span>
          </a>
          <span class="tooltip">التقارير</span>
          
        </li>
  
        <li>
          <a href="#">
            <i class='bx bx-cog'></i>
            <span class="links_name">الإعدادات</span>
          </a>
          <span class="tooltip">الإعدادات</span>
          
        </li>
        
      </ul>
      <li class="profile">
          <div class="profile-details">
            <img src="image/User.png" alt="profileImg">
            <div class="name_job">
              <div class="name">أبو اسامة</div>
              <div class="job">Admin</div>
            </div>
          </div>
          <i class='bx bx-log-out' id="log_out"></i>
        </li>
    </div>
    
    <section class="home-section">
      <div class="text">      
      
        <!--Botten-->
        <div class="Registration_buttons">
          <button class="tabLink" onclick="content(event, 'daily-first-tab')" id="dailyDefaultCont">اليومية</button>
          <button class="tabLink" onclick="content(event, 'daily-second-tab')">تمام السيارات</button>
        </div>
          
        <div id="daily-first-tab" class="tabContent">

          <div class="row">
            
            <!--table tenants-->
            <div class="dailyTenants">

              <div>
              <!--  زر مصروفات المكتب -->
              <button class="button_action" onclick="openPop('dailyTenPopForm') + dailySel('CarPlate_RenterName', 'CarPlate_RenterName')">أضافة</button>
              <button class="button_action" onclick="allEditable(event, 'daily_ten_table')" id="editBTN">تعديل</button>
              <label for="startDate">من</label>
              <input type="date" name="startDate" id="dailyStartFilter">
              <label for="dailyEndFilter">الى</label>
              <input type="date" name="endDate" id="dailyEndFilter" placeholder="يوم-شهر-سنة">
              <button onclick="filter('dailyStartFilter', 'dailyEndFilter')">بحث</button>
              </div>


              <!-- window for adding data-->
              <dialog id="dailyTenPopForm">
                <button type="submit" onclick="closePop('dailyTenPopForm')">إلغاء</button>
                <br>
                  <form id="dailyTenForm" onsubmit="submitForm(event, 'DailyRentInfo','DailyRentInfo') + closePop('dailyTenPopForm')">
                    <br>
                    <label for="CarName">اسم السيارة</label>
                    <br>
                    <select class="newDailyTenData" id="CarName" name="CarName">
                      <option disabled selected hidden>اسم السيارة</option>
                    </select>
                    <br>
                    <label for="CarPlate">اللوحة</label>
                    <br>
                    <select class="newDailyTenData" id="CarPlate" name="CarPlateNumber">
                      <option selected hidden value="">رقم اللوحة</option>
                    </select>
                    <br>
                    <label for="RenterName">اسم المستأجر</label>
                    <br>
                    <select class="newDailyTenData" id="RenterName" name="RenterName">
                      <option selected hidden value="">اسم المستأجر</option>
                    </select>
                    <br>
                    <label>تاريخ دفع الإيجار</label>
                    <br>
                    <input class="newDailyTenDate" type="date" name="RentPaymentDate">
                    <br>
                    <label for="RentStartDate">تاريخ بدء الإيجار</label>
                    <br>
                    <input class="newDailyTenData" type="date"name="RentStartDate">
                    <br>
                    <label for="RentEndDate">تاريخ نهاية الإيجار</label>
                    <br>
                    <input class="newDailyTenData" type="date"name="RentEndDate">
                    <br>
                    <label for="PaymentMethod">طريقة الدفع</label>
                    <br>
                    <select class="newDailyTenData" placeholder=" مدين " name="PaymentMethod">
                      <option selected hidden value="">طريقة الدفع</option>
                      <option value="نقدي">نقدي</option>
                      <option value="شبكة">شبكة</option>
                      <option value="تحويل">تحويل</option>
                    </select>
                    <br>
                    <label for="RentPrice">القيمة</label>
                    <br>
                    <input class="newDailyTenData" placeholder=" القيمة " name="RentPrice">
                    <br>
                    <label for="RentPaid">المدفوع</label>
                    <br>
                    <input class="newDailyTenData" placeholder="المدفوع" name="RentPaid">
                    <br>
                    <label>الضريبة المضافة</label>
                    <br>
                    <select class="newDailyTenData" name="VAT">
                      <option selected hidden value="">الضريبة المضافة</option>
                      <option value="15">يوجد</option>
                      <option value="0">لا يوجد</option>
                    </select>
                    <br>
                    <br>
                    <button type="submit">حفظ</button>
                  </form>
              </dialog>
              <table class="table_tenants">

                <thead>

                  <th>رقم</th>
                  <th>رقم اللوحة</th>
                  <th>اسم المستأجر</th>
                  <th>تارخ الدفع</th>
                  <th>بدء الإيجار</th>
                  <th>نهاية الإيجار</th>
                  <th>مدين</th>
                  <th>القيمة</th>
                  <th>المدفوع</th>
                  <th>حذف</th>

                </thead>
                
                <tbody id="DailyRentInfo" ondblclick="editable(event)">
                  
                </tbody>
              </table>
            </div>

            <!--table expenses -->         
            <div class="dailyExpenses">
              <div>
                <!-- زر مصروفات المكتب -->
                <button class="button_action" onclick="openPop('dailyExpPopForm') + dailySel('CarPlate_ExpenseName', 'ExpCarPlate_ExpenseName')">أضافة</button>
                <button class="button_action" onclick="allEditable(event, 'daily_exp_table')" id="editBTN">تعديل</button>
              </div>

              <!-- window for adding data-->
              <dialog id="dailyExpPopForm">
                <button onclick="closePop('dailyExpPopForm')">إلغاء</button>
                <br>
                  <form id="dailyExpForm" onsubmit="submitForm(event, 'DailyExpInfo','DailyExpInfo') + closePop('dailyExpPopForm')">
                    <br>
                    <label for="carPlateNumber">رقم اللوحة</label>
                    <br>
                    <select class="newDailyExpData" id="ExpCarPlate" name="CarPlateNumber">
                      <option selected hidden value="">رقم اللوحة</option>
                    </select>
                    <br>
                    <label for="ExpenseSource"> مصدر الصرف </label>
                    <br>
                    <select class="newDailyExpData" id="ExpenseName" name="ExpenseSource">
                      <option selected hidden value="">مصدر الصرف</option>
                    </select>
                    <br>
                    <label> تاريخ الصرف </label>
                    <br>
                    <input type="date" class="newDailyExpData" placeholder=" تاريخ الصرف " name="ExpenseDate">
                    <br>
                    <label>طريقة الدفع</label>
                    <br>
                    <select class="newDailyExpData" placeholder=" دائن " name="PaymentMethod">
                      <option selected hidden value="">طريقة الدفع</option>
                      <option value="نقدي">نقدي</option>
                      <option value="شبكة">شبكة</option>
                      <option value="تحويل">تحويل</option>
                    </select>
                    <br>
                    <label>القيمة</label>
                    <br>
                    <input class="newDailyExpData" placeholder=" القيمة " name="ExpenseCost">
                    <br>
                    <br>
                    <button type="submit">حفظ</button>
                  </form>
                
              </dialog>

              <table class="table_Expenses">
                
                <thead>

                  <th>رقم</th>
                  <th>رقم اللوحة</th>
                  <th>مصدر الصرف</th>
                  <th>تاريخ الصرف</th>
                  <th>دائن</th>
                  <th>القيمة</th>
                  <th>حذف</th>

                </thead>
                
                <tbody id="DailyExpInfo" ondblclick="editable(event)">
                  
                </tbody>
              </table>
            </div>
          </div>

          



            
          <table style="padding-inline: 5px; margin-top: 6rem;">
            <thead>
              <tr>
                <th colspan="2">مدين</th>
                <th colspan="2">دائن</th>
                <th colspan="2">الخزنة</th>
              </tr>
              <tr>
                <th>نقدي</th>
                <th>شبكة</th>
                <th>نقدي</th>
                <th>شبكة</th>
                <th>نقدي</th>
                <th>شبكة</th>
              </tr>

            </thead>

            <tbody id="dailyTotal">
                
            </tbody>
          </table>
        </div>

        <div id="daily-second-tab" class="tabContent">
          <div class="table-Car">
            <table>
              
              <thead>

                <th>رقم</th>
                <th> اسم المستأجر </th>
                <th> رقم الهوية </th>
                <th> صورة الهوية </th>
                <th> جوال التواصل </th>
                <th> جوال ابشر </th>
                <th> هوية السائق </th>
                <th> صورة هوية السائق </th>
                <th> صورة للتفويض </th>
                <th> حذف </th>

              </thead>
              
              <tbody id="RentInfo" ondblclick="editable(event)">

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>
      
    
    <script src="/public/js/Main.js" defer></script>
    <script src="/public/js/daily.js" defer></script>
    
    

  </body>
</html>
